<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
<constant name="struts.devMode" value="true" />
   <package name="login" namespace="/admin" extends="struts-default">
   <interceptors>
      <interceptor name="login001" class="admin.interceptor.AdminInterceptor"></interceptor>
</interceptors>
      <action name="login" class="admin.struts.LoginAction">
            <result name="success">/admin/reply.jsp</result>
            <result name="wrong">/admin/login.jsp</result>
      </action>
      <action name="logout" class="admin.struts.LogoutAction">
            <result name="success">/admin/login.jsp</result>
      </action>
   </package>
</struts>