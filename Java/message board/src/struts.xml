<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
<!-- 解决中文乱码问题 -->
  <constant name="struts.i18n.encoding" value="UTF-8"></constant>
<constant name="struts.locale" value="zh_CN"></constant>
<!-- 解决中文乱码问题 -->

 <constant name="struts.devMode" value="true"></constant>
    <package name="login" namespace="/admin" extends="struts-default">
        <interceptors>
            <!-- 自定义的拦截器 -->
            <interceptor name="interceptorLogin" class="admin.interceptor.AdminInterceptor"></interceptor>
            <!-- 将自定义的拦截器打包到一个拦截器栈 -->
            <interceptor-stack name="customStack">
                <interceptor-ref name="defaultStack"></interceptor-ref>
                <interceptor-ref name="interceptorLogin"></interceptor-ref>
            </interceptor-stack>
        </interceptors>
        <!-- 将自定义的拦截器栈应用到全局 -->
        <default-interceptor-ref name="customStack"></default-interceptor-ref>
        <!-- 设置全局的action跳转页面 -->
        <global-results>
            <result name="login">/admin/login.jsp</result>
        </global-results>
        <action name="login" class="admin.struts.LoginAction">
            <result name="success">/admin/reply.jsp</result>
            <result name="wrong">/admin/login.jsp</result>
        </action>
        <action name="logout" class="admin.struts.LogoutAction">
            <result name="success">/admin/login.jsp</result>
        </action>
        <action name="reply" class="admin.struts.LogoutAction">
            <result name="success">/admin/login.jsp</result>
        </action>
        <action name="reply_s" class="admin.struts.LoginAction" method ="pagingQuery">
            <result name="success">/admin/reply.jsp</result>
        </action>
        <action name="reply_inf" class="admin.struts.ReplyAction" method ="showMessage">
            <result name="success">/admin/message.jsp</result>
        </action>
        <action name="reply_d" class="admin.struts.LoginAction" method ="delete">
            <result name="success">/admin/reply.jsp</result>
        </action>
        <action name="index" class="admin.struts.LoginAction" method ="number">
            <result name="index">/admin/index.jsp</result>
        </action>
        <action name="change" class="admin.struts.LoginAction" method ="change">
            <result name="change">/admin/change.jsp</result>
        </action>
        <action name="modify" class="admin.struts.ReplyAction" method ="modify">
            <result name="success" type="chain">reply_s</result>
        </action>
    </package>
  	
</struts>